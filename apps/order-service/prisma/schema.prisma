generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    String   @map("user_id")
  product   String
  quantity  Int
  price     Float
  status    String   @default("pending")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("orders")
}
